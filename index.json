---
layout: text
---
[
{% for item in site.data.definitions.hierarchy.levels %}
    {% assign levelHref = item.level | map_item_level %}
    {
        "id": "level-{{ item.level }}",
        "title": "{{ item.name }}",
        "body": {{ item.description | jsonify }},
        "url": "/{{ levelHref }}"
    },
    {% for need in item.needs %}
    {
        "id": {{ need.ID | jsonify }},
        "title": {{ need.Name | jsonify }},
        "body": {{ need.Definition | jsonify }},
        "url": "/{{ levelHref }}"
    },
    {% endfor %}
{% endfor %}
{
    "id": "home",
    "title": "Home",
    "body": "Home page abut this project",
    "url": "/"
}
]